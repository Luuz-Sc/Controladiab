<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="android:background">@color/colorAppTheme</item>
            <item name="itemTextColor">@color/colorTextWhite</item>
            <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        </style>

        <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
            <item name="android:backgroundTint">@null</item>
            <item name="android:backgroundTintMode">src_over</item>
        </style>

    <style name="CustomTimePickerTheme">
        <item name="android:timePickerStyle">@style/Widget.MaterialComponents.TimePicker</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:calendarViewShown">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">100dp</item>
    </style>

</resources>